<table class="table table-striped table-bordered">
  <tbody>
    <%- Sys::Category.detail_shown_attributes.each do |attr_name| -%>
      <tr>
        <th width="130"><%= Sys::Category.human_attribute_name(attr_name)%></th>
        <td>
          <% case attr_name
             when "children_name", "properties_name" %>
             <%= @sys_category.send(attr_name).join("<br/>").html_safe %>
          <%- else -%>
            <%= @sys_category.send(attr_name) %>
          <%- end -%>
        </td>
      </tr>
    <%- end -%>
  </tbody>
</table>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= link_to("返回列表", sys_categories_path, class: "btn" )%>&nbsp; &nbsp; &nbsp;
    <%= link_to("编辑", edit_sys_category_path(@sys_category), class: "btn btn-primary") if can?(:update, @sys_category) %>
  </div>
</div>