<div class="page-header"></div>
<div class="row">
  <div class="col-xs-12">
    <%= simple_form_for @sku_binding, html: {role: 'form'}, remote: true do |f| %>
      <%= f.input :sku_id do %>
        <%= hidden_field_tag :partial_type, params[:partial_type] %>
        <%= f.hidden_field :sku_id %>
        <%= @sku_binding.sku.full_name %>
      <%- end -%>
      <%= f.input :sys_sku_id do %>
        <%= f.select :sys_sku_id,  @sys_skus.collect{|sys_sku| [sys_sku.name, sys_sku.id]}, {include_blank: true}, class: "chosen-select" %>
      <%- end -%>
      <%= f.input :sys_sku_number %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "取消", name: "btn_cancel", class: "btn" %>
          &nbsp; &nbsp; &nbsp;
          <%= f.submit "保存", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
