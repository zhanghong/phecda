<div class="page-header">
  <h1>
    <%= @core_stock.name %>
  </h1>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped table-bordered">
      <tbody>
        <% Core::Stock.detail_shown_attributes.each do |attr_name| %>
          <tr>
            <th width="130">
              <%= Core::Stock.human_attribute_name(attr_name) %>
            </th>
            <td>
            <%= @core_stock.send(attr_name) %>
            </td>
          </tr>
        <%- end -%>
      </tbody>
    </table>
  </div><!-- /span -->
</div>