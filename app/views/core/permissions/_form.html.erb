<div class="row">
  <div class="col-sm-12">
    <%= simple_form_for @core_permission, html: {role: 'form'} do |f| %>
      <%= f.input :name, input_html: {autocomplete: "off"} %>
      <%= f.input :module_name, input_html: {autocomplete: "off"} %>
      <%= f.input :group_name, input_html: {autocomplete: "off"} %>
      <%= f.input :subject_class, input_html: {autocomplete: "off"} %>
      <%= f.input :action, input_html: {autocomplete: "off"} %>
      <%= f.input :ability_method, input_html: {autocomplete: "off"} %>
      <%= f.input :sort_num, input_html: {autocomplete: "off"} %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "取消", name: "btn_cancel", class: "btn" %>
          <%= f.submit "保存", class: "btn btn-primary" %>
        </div>
      </div>
    <%- end -%>
  </div>
</div>